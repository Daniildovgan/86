#include <iostream>

void removeEvenOrOdd(int* &arr, int &size, bool removeEven) {
    int newSize = 0;
    for (int i = 0; i < size; ++i) {
        if ((arr[i] % 2 == 0 && removeEven) || (arr[i] % 2 != 0 && !removeEven)) {
            ++newSize;
        }
    }

    int *newArr = new int[newSize];
    int index = 0;
    for (int i = 0; i < size; ++i) {
        if ((arr[i] % 2 == 0 && removeEven) || (arr[i] % 2 != 0 && !removeEven)) {
            newArr[index++] = arr[i];
        }
    }

    delete[] arr;
    arr = newArr;
    size = newSize;
}

void printArray(int arr[], int size) {
    for (int i = 0; i < size; ++i) {
        std::cout << arr[i] << " ";
    }
    std::cout << std::endl;
}

int main() {
    int M;

    std::cout << "Введіть розмір масиву: ";
    std::cin >> M;
    int *A = new int[M];

    std::cout << "Введіть елементи масиву:\n";
    for (int i = 0; i < M; ++i) {
        std::cin >> A[i];
    }

    int choice;
    std::cout << "Оберіть опцію для видалення:\n";
    std::cout << "1. Парні числа\n";
    std::cout << "2. Непарні числа\n";
    std::cin >> choice;

    switch (choice) {
        case 1:
            removeEvenOrOdd(A, M, true);
            break;
        case 2:
            removeEvenOrOdd(A, M, false);
            break;
        default:
            std::cout << "Неправильний вибір опції!\n";
            break;
    }

    std::cout << "Масив після видалення:\n";
    printArray(A, M);

    delete[] A;

    return 0;
}
